<% if flash[:building_destroy_error] %>
  <p> <%= flash[:building_destroy_error] %> </p>
<% end %>

<h1>Buildings</h1>

<table class="table col-lg-8 mx-auto text-center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name.capitalize %></td>
        <td><%= building.address.capitalize %></td>
        <td><%= building.city.capitalize %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Building', new_building_path, class:'btn btn-info text' %>
